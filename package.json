{
    "name": "demosocketserver",
    "version": "0.0.1",
    "description": "",
    "main": "app.js",
    "types": "dist/app.d.ts",
    "scripts": {
        "build": "rm -rf dist && npm i && ./node_modules/.bin/tsc --pretty --locale zh-TW && npm run context && npm run sqltemplate",
        "build:win": "DEL /Q /S dist && tsc && npm run context:win && npm run sqltemplate:win",
        "clear": "rm -rf package-lock.json && rm -rf node_modules && npm cache clean -f &&  npm install && npm run rebuild:context",
        "context": "cp -r ./src/context/ ./dist/context/",
        "context:win": "XCOPY src\\context dist\\context /S /E /Y /I",
        "doctest:dredd": "ts-node src/tools/IOCBuild.ts && npm run genswagger && npm run dredd",
        "dredd": "./node_modules/.bin/dredd --config ./dredd.yml",
        "duplicated": "./node_modules/.bin/jscpd --config .cpd.yaml",
        "genswagger": "./node_modules/.bin/run-func ./mock/gen.js writeSwagger",
        "jenkins": "DEL /Q /S node_modules && npm cache clean -f && npm install && npm run rebuild:context:win && npm run build:win",
        "mockserver": "ts-node src/tools/IOCBuild.ts && npm run genswagger && cd mock && npm i && cd .. && nodemon --watch ./src -e yaml -- ./mock/index.js",
        "rebuild:context": "rm -rf ./src/config/genDatabaseConfig && ts-node ./src/tools/DBJson.ts && ./node_modules/.bin/ts-node ./src/tools/IOCBuild.ts  && rm -rf ./src/context/*AckDao.ts && rm -rf ./src/context/*Ack && node ./node_modules/gama-orm/bin/generator.js -c ./src/config/genDatabaseConfig.json -o ./src/context -n && rm -rf ./src/config/genDatabaseConfig.json",
        "rebuild:context:win": "ts-node src/tools/DBJson.ts && ts-node src/tools/IOCBuild.ts  && node node_modules/gama-orm/bin/generator.js -c src/config/genDatabaseConfig.json -o src/context -n && DEL /Q /F src\\config\\genDatabaseConfig.json",
        "server": "npm run build && ./node_modules/.bin/nodemon ./dist/app.js",
        "server:rebuild": "npm run clear && npm run build && nodemon ./dist/app.js",
        "sonar": "./node_modules/.bin/gulp sonar",
        "sqltemplate": "cp -r ./src/sqlTemplate/ ./dist/sqlTemplate/",
        "sqltemplate:win": "XCOPY src\\sqlTemplate dist\\sqlTemplate /S /E /Y /I",
        "start": "npm run start:live",
        "start:debug": "node --inspect=5858 --debug-brk -r ts-node/register ./src/app.ts",
        "start:live": "ts-node src/tools/IOCBuild.ts && nodemon --watch src --exec ts-node -- src/app.ts",
        "start:prod": "npm run build && node dist/app.js",
        "start:rebuild": "npm run clear && npm run start:live",
        "test": "nyc ./node_modules/.bin/mocha --require ts-node/register --recursive && npm run test:reporter",
        "test:debug": "mocha --inspect --debug-brk --not-timeouts ts:ts-node/register test/**/*.spec.ts",
        "test:reporter": "opener ./coverage/lcov-report/index.html",
        "tslint": "tslint src/**/*.ts && tslint src/**/**/*.ts && tslint src/**/**/**/*.ts",
        "watch": "npm run build -- --watch",
        "watch:test": "npm run test -- --watch --watch-extensions ts",
        "windows:run": "npm install --global --production windows-build-tools && ts-node app.ts",
        "start:windows": "npm install --global --production windows-build-tools && ts-node app.ts"
    },
    "keywords": [
        "RESTful",
        "TypeScript"
    ],
    "author": "thaiwu",
    "license": "ISC",
    "dependencies": {
        "@ggttoo44/base-server": "0.0.70",
        "@types/validator": "^9.4.1",
        "bignumber.js": "^7.2.1",
        "class-validator": "^0.9.1",
        "cors": "^2.8.4",
        "fast-json-stringify": "^1.7.1",
        "find-up": "^3.0.0",
        "fs-extra": "^7.0.0",
        "grpc": "^1.14.1",
        "grpc-caller": "^0.9.0",
        "jsonwebtoken": "^8.3.0",
        "klaw": "^3.0.0",
        "koa": "^2.5.2",
        "koa-bodyparser": "^4.2.1",
        "koa-csrf": "^3.0.6",
        "koa-helmet": "^4.0.0",
        "koa-jwt": "^3.5.0",
        "koa-log4": "^2.3.0",
        "koa-multer": "^1.0.2",
        "koa-req-validator": "^0.2.1",
        "koa-router": "^7.4.0",
        "koa2-cors": "^2.0.6",
        "lodash": "^4.17.10",
        "lodash-joins": "^2.0.3",
        "log4js": "3.0.5",
        "mali": "^0.9.1",
        "moment": "^2.22.2",
        "moment-range": "^4.0.1",
        "mysql2": "^1.6.1",
        "reflect-metadata": "^0.1.12",
        "uuid": "^3.3.2",
        "uuid-with-v6": "^1.1.2",
        "validator": "^10.7.1"
    },
    "devDependencies": {
        "@types/chai": "^4.1.4",
        "@types/ioredis": "^4.0.1",
        "@types/jsonwebtoken": "^7.2.8",
        "@types/klaw": "^2.1.1",
        "@types/koa": "^2.0.46",
        "@types/koa-bodyparser": "^5.0.1",
        "@types/koa-helmet": "^3.1.2",
        "@types/koa-router": "^7.0.31",
        "@types/lodash": "^4.14.116",
        "@types/mocha": "^5.2.5",
        "@types/mysql": "^2.15.5",
        "@types/node": "^10.9.4",
        "@types/sharp": "^0.17.10",
        "@types/uuid": "^3.4.4",
        "babel-plugin-istanbul": "^5.0.1",
        "chai": "^4.1.2",
        "connect": "^3.6.6",
        "coveralls": "^3.0.2",
        "deref": "^0.7.1",
        "dredd": "5.1.11",
        "fury": "^3.0.0-beta.7",
        "glob": "^7.1.3",
        "gulp": "^4.0.0",
        "husky": "^v0.15.0-rc.7",
        "install-peers": "^1.0.2",
        "js-beautify": "^1.8.4",
        "js-yaml": "^3.12.0",
        "jscpd": "^0.6.22",
        "jsonlint": "^1.6.3",
        "lint-staged": "^7.2.2",
        "minimatch": "^3.0.4",
        "mocha": "^5.2.0",
        "mocha-multi-reporters": "^1.1.7",
        "mocha-typescript": "^1.1.17",
        "mochawesome": "^3.0.3",
        "nodemon": "^1.18.4",
        "nyc": "^13.0.1",
        "opener": "^1.5.1",
        "run-func": "^1.0.2",
        "source-map-support": "^0.5.9",
        "swagger-parser": "^5.0.5",
        "swagger2-postman-generator": "^2.1.1",
        "swagger2-to-postman": "^1.1.9",
        "tap-nyc": "^1.0.3",
        "ts-mockito": "^2.3.1",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "typedoc": "0.12.0",
        "typescript": "^3.0.3"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint"
        ]
    },
    "nodemonConfig": {
        "ignore": [
            "src/tools/*"
        ]
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "exclude": [
            "**/*.d.ts",
            "src/config/",
            "src/container/",
            "src/context/",
            "!src/context/BaseEntity.ts",
            "src/exceptions/",
            "src/tools/",
            "src/middlewares/",
            "src/sqlTemplate/",
            "src/typings/",
            "src/app.ts",
            ".nyc_output/",
            ".vscode/",
            "config/",
            "coverage/",
            "doc/",
            "logs/",
            "mock/",
            "node_modules/",
            "test/",
            "*.js",
            "*.json",
            "src/controllers/BaseController.ts",
            "src/services/BaseService.ts",
            "src/repositories/BaseRepository.ts",
            "src/models/",
            "src/utils/DaoOperator.ts",
            "src/controllers/IController.ts",
            "src/**/*.spec.ts",
            "src/**/*Controller.ts",
            "src/**/*Repository.ts"
        ],
        "reporter": [
            "lcov",
            "text",
            "text-summary"
        ],
        "watermarks": {
            "lines": [
                80,
                95
            ],
            "functions": [
                80,
                95
            ],
            "branches": [
                80,
                95
            ],
            "statements": [
                80,
                95
            ]
        },
        "sourceMap": true,
        "cache": false,
        "exclude-after-remap": false,
        "report-dir": "./coverage",
        "instrument": true,
        "all": true
    }
}